{
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["dockerfile", "pip_requirements", "pip_setup"],
  "packageRules": [
    {
      "managers": ["pip_requirements"],
      "paths": ["requirements/dev.txt","requirements/test.txt"],
      "groupName": "non-production-dependencies"
    }
  ],
  "pip_requirements": {
    "fileMatch": ["requirements/.+?.txt"]
  }
}
